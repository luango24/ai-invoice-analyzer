{
  "CommonSettings": {
    // Path to the Google credentials file (not included in repo)
    "SecretJsonFile": "C:\\myvault\\credentials.json",

    // Gmail query to filter invoice emails
    // Example: "from:(Super 99) has:attachment after:2025/01/01 before:2026/01/01"
    "QueryString": "from:(Super 99) has:attachment after:2025/01/01 before:2026/01/01",

    // LLM model name used by Ollama (must match 'ollama pull ...')
    "ModelName": "llama3.2",

    // Ollama service address (local default)
    "BaseAddress": "http://localhost:11434",

    // Timeout in minutes for AI requests (summaries + item categorization)
    "RequestTimeoutMinutes": 5,

    // Local folder where PDFs will be downloaded + processed
    "WorkingFolder": "C:\\working",

    // Max parallel tasks for PDF processing
    "TaskCounter": 5,

    // Max parallel AI prompts (SemaphoreSlim)
    "PrompCounter": 3,

    // Enables/Disables PDF download from Gmail.
    // If false â†’ uses existing local PDFs in WorkingFolder.
    "DownloadInvoice": false
  }
}